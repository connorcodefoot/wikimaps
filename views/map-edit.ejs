<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">


  <!-- Internal Styles-->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/map-by-id.css" />

  <!-- External Scripts-->
  <script src="/vendor/jquery-3.0.0.js"></script>


  <!-- Internal Scrips-->
  <script defer src="/scripts/app.js"></script>

</head>

<body>
  <div>
    <h1>
    </h1>
  </div>
  <div id="map"></div>

  <script>

    function initMap() {

      // Set Map
      let latitude = <%= mapByID.lat %>;
      let longitude = <%= mapByID.lng %>;
      let zoomed = <%= mapByID.zoom %>;
      let map;
      map = new google.maps.Map(document.getElementById("map"), {
        center: { lat: latitude, lng: longitude },
        zoom: zoomed,
      });

      // Set points
      let contentString;
      let infowindow;
      let marker;
      let title;
      let description;
      let image;
      let pointLatitude;
      let pointLongitude;



      <% points.forEach((e) => { %>;
        title = '<%= e.title %>';
        description = '<%= e.description %>';
        image = '<%= e.image %>';
        pointLatitude = <%= e.latitude %>;
        pointLongitude = <%= e.longitude %>;

        marker = new google.maps.Marker({
          position: {
            lat: pointLatitude,
            lng: pointLongitude
          },
          map,
          title: 'who cares'
        });

        infowindow = new google.maps.InfoWindow({
          position: {
            lat: pointLatitude,
            lng: pointLongitude
          },
          content: `<div style='float:left'><img src=${image} style='max-width:100px'></div><div style='float:right; padding: 10px;'><b><h1>${title}</h1></b><br/>${description} </div>`,
          ariaLabel: 'nothing'
        });


        marker.addListener("click", () => {
          infowindow.open({
            map,
          });
        })

      <% }) %>;


    }


    window.initMap = initMap


  </script>

  <div class ="points-table">
    <h3>Points</h3>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% points.forEach(e => { %>
                <tr>
                  <td>
                    <img src="<%= e.image %>">
                  </td>
                  <td>
                      <%= e.title  %>
                  </td>
                  <td>
                      <%= e.description %>
                  </td>
                  <td>
                    <form action="/points/edit/<%= e.id %>/">
                      <button type="submit" class="btn btn-outline-info">&#9998</button>
                    </form>
                  </td>
                  <td>
                    <form method="POST" action="/points/delete/<%= e.id %>">
                      <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
  </div>



</body>

<script
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyATkWMFgMKb9TmU_CmbD9EteeklG2gkC3M&callback=initMap&v=weekly"
  defer></script>

</html>
