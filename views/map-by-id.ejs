<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">


  <!-- Internal Styles-->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/map-by-id.css" />

  <!-- External Scripts-->
  <script src="/vendor/jquery-3.0.0.js"></script>


  <!-- Internal Scrips-->
  <script defer src="/scripts/app.js"></script>

</head>

<body>
  <div>
    <h1>
    </h1>
  </div>
  <div id="map"></div>

  <script>

    function initMap() {

      // Set Map
      let latitude = <%= mapByID.lat %>;
      let longitude = <%= mapByID.lng %>;
      let zoomed = <%= mapByID.zoom %>;
      let map;
      map = new google.maps.Map(document.getElementById("map"), {
        center: { lat: latitude, lng: longitude },
        zoom: zoomed,
      });

      // Set points
      let contentString;
      let infowindow;
      let marker;
      let title;
      let description;
      let image;
      let pointLatitude;
      let pointLongitude;
      let infoArray = [];
      let counter = 0;

      <% for (let i = 0; i < points.length; i++) { %>;
        title = '<%= points[i].title %>';
        description = '<%= points[i].description %>';
        image = '<%= points[i].image %>';
        pointLatitude = <%= points[i].latitude %>;
        pointLongitude = <%= points[i].longitude %>;

        marker = new google.maps.Marker({
          position: {
            lat: pointLatitude,
            lng: pointLongitude
          },
          map,
          title: 'who cares'
        });

        infowindow = new google.maps.InfoWindow({
          position: {
            lat: pointLatitude,
            lng: pointLongitude
          },
          content: `<div style='float:left'><img src=${image} style='max-width:100px'></div><div style='float:right; padding: 10px;'><b><h1>${title}</h1></b><br/>${description} </div>`,
          ariaLabel: 'nothing'
        });

        infoArray.push(infowindow);

        marker.addListener('click', function(){
        infoArray[counter].open(map, this);

        counter++
        });


      <% } %>;
    }


    window.initMap = initMap


  </script>
</body>

<script
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyATkWMFgMKb9TmU_CmbD9EteeklG2gkC3M&callback=initMap&v=weekly"
  defer></script>

</html>
